<h2>新規会員登録ページ</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

   <div class="field">
    <%= f.label :encrypted_password, "ユーザー名（表示名）" %><br />
    <%= f.email_field :encrypted_password %>
  </div>

  <div class="field">
    <%= f.label :name, "名前" %><br />
    <%= f.email_field :name %>
  </div>

  <div class="field">
    <%= f.label :name_kana, "名前（カナ）" %><br />
    <%= f.email_field :name_kana %>
  </div>

  <div class="gender-field">
    <%= f.label :gender, "性別" %>
    <%= f.radio_button :gender, "others" %>
    <%= f.label :gender, "指定なし" %>

    <%= f.radio_button :gender, "male" %>
    <%= f.label :gender, "男性" %>

    <%= f.radio_button :gender, "female" %>
    <%= f.label :gender, "女性" %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :passwor, "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード（確認用）" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "public/shared/error_messages", resource: resource %>

