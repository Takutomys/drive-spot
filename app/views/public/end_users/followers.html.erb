<div class="cover-end_user-index">
  <div class="container">
    <div class="row justify-content-center">
      <h1 class="font-weight-normal mt-5 mb-5">フォロワー一覧</h1>
    </div>
    <div class="row justify-content-center">
      <% @end_users.each do |end_user| %>
      <div class="one-post card w-100">
        <%= link_to end_user_path(end_user) do %>
        <p class="caption h4"><%= end_user.screen_name %></p>
        <div class="d-flex">
          <%= attachment_image_tag @end_user, :profile_image, size: '50x50', fallback: "no_image.png", class: "mb-3 mt-3 ml-3 profile-img" %>
          <h4 class="ml-5"><%= end_user.profile %></h4>
        </div>
        <p class="caption"><%= "#{end_user.tweets.count} 投稿" %></p>
        <% end %>
      </div>
      <% end %>
    </div>
    <%= paginate @end_users %>
  </div>
</div>