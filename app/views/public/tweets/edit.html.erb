<h1>編集画面</h1>
  <%= form_with model: @tweet do |f| %>
    <div class="form_group">
      <%= f.file_field :image, accept: "image/*" %>
    </div>
    <div class="form_group">
      <%= f.label :name, "スポット名" %><br>
      <%= f.text_field :name %>
    </div>
    <div class="form_group">
      <%= f.label :introduction, "おすすめポイント" %><br>
      <%= f.text_area :introduction %>
    </div>
    <div class="form_group">
      <%= f.label :latitude, "経度" %><br>
      <%= f.text_field :latitude, id: :lat %><br>
      <%= f.label :longitude, "緯度" %><br>
      <%= f.text_field :longitude, id: :lng %>
    </div>
    <div>
      <%= f.submit "保存する", class: 'btn btn-success' %>
    </div>
  <% end %>
