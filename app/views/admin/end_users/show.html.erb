<div class="container">
  <div class="row justify-content-center">
    <h1 class="mt-4"><%= @end_user.screen_name %>さんの詳細画面</h1> 
  </div>
  <div class="row justify-content-center mt-4">
    <table class="table1 table.hover">
      <tbody>
        <tr>
          <th>会員ID</th>
          <td><%= @end_user.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= @end_user.name %></td>
        </tr>
        <tr>
          <th>氏名（カナ）</th>
          <td><%= @end_user.name_kana %></td>
        </tr>
        <tr>
          <th>性別</th>
          <td><%= @end_user.gender_i18n %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @end_user.email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td>
            <% if @end_user.is_deleted %>
              <span class="text-success">有効</span>
       　    <% else %>
              <span class="text-muted">退会</span>
       　    <% end %>
          </td>
        </tr>
        <tr>
          <th></th>
          <td>
            <%= link_to '編集', edit_admin_end_user_path, class: "btn btn-primary" %>
            <%= link_to '一覧', admin_end_users_path, class: "btn btn-success" %>
          </td  
        </tr>
      </tbody>
    </table>
  </div>  
  