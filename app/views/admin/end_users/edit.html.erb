<div class="container">
  <div class="row justify-content-center mt-4">
    <h1>アカウント情報編集</h1>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-7 col-md-offset-3 form-wrapper">
      <%= form_with model: @end_user, url: admin_end_user_path(@end_user.id) do |f| %>
      <div class='form-group'>
        <%= f.label :screen_name, "ユーザー名" %>
        <%= f.text_field :screen_name, class: "form-control" %>
      </div>
      <div class='form-group'>
        <%= f.label :name, "氏名" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class='form-group'>
        <%= f.label :name_kana, "氏名（カナ）" %>
        <%= f.text_field :name_kana, class: "form-control" %>
      </div>
      <div class='form-group'>
        <%= f.label :email, "メールアドレス" %>
        <%= f.text_field :email, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :gender, "性別" %>
      </div>
      <div class="form-group">
        <%= f.radio_button :gender, "others" %>
        <%= f.label :genrde, "指定なし" %>
      　<%= f.radio_button :gender, "male" %>
        <%= f.label :gender, "男性" %>
        <%= f.radio_button :gender, "female" %>
        <%= f.label :gender, "女性" %>                        
      </div>
      <div class="form-group">
        <%= f.label :is_deleted, "会員ステータス" %>
      </div>
      <div class="form-group">
        <%= f.radio_button :is_deleted, "false" %>
        <%= f.label :is_deleted, "有効" %>
        <%= f.radio_button :is_deleted, "true" %>
        <%= f.label :is_deleted, "退会" %>
      </div>
      <div class="button offset-5">
        <%= f.submit "保存する", class: 'btn btn-success' %>
      </div>
      <% end %>
    </div>
  </div>
</div>