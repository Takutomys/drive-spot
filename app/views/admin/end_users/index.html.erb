<div class="container">
  <div class="row justify-content-center">
    <h2   class="pt-3">ユーザー一覧</h2>
  </div>
  <div class="row justify-content-center">
    <table class="table table-hover mt-3">
      <thead class="thead-light">
        <tr>
          <th>会員ID</th>
          <th>ユーザー名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <% @end_users.each do |end_user| %>
      <tr>
        <td><%= end_user.id %></td>
        <td><%= link_to end_user.screen_name, admin_end_user_path(end_user) %></td>
        <td><%= end_user.email %></td>
        <td>
          <% if end_user.is_deleted %>
            <span class="text-muted">退会</span>
       　  <% else %>
            <span class="text-success">有効</span>
       　  <% end %>
        </td>
      </tr>
      <% end %>
    </table>
　</div>
　<div class="row">
    <div class="col-md-6 offset-md-5 mt-5">
      <%= paginate @end_users %>
    </div>
  </div>
</div>

