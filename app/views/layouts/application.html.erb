<!DOCTYPE html>
<html>
  <head>
    <title>Drive_spot</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= include_gon %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <div class="container">
    <header class="row">
      <%= notice %>
      <% if end_user_signed_in? %>
        <div><%= link_to "トップ", root_path %></div>
        <div class=pl-2><%= link_to "マイページ", end_user_path(current_end_user) %></div>
        <div class=pl-2><%= link_to "投稿する", new_tweet_path %></div>
        <div class=pl-2><%= link_to "投稿一覧", tweets_path %></div>
        <div class=pl-2><%= link_to "ログアウト", destroy_end_user_session_path, method: :delete %></div>
        <div class=pl-2><%= link_to "退会する", end_user_unsubscribe_path %></div>
      <% end %>
    </header>
  </div>
  <body>
    <%= yield %>
  </body>
</html>
